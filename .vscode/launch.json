// .vscode/launch.json
{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File", // This name appears in the debug dropdown
            "type": "debugpy",             // Specifies the Python debugger
            "request": "launch",          // We want to launch/start the script
            "program": "${file}",         // Tells VS Code to debug the currently open file
            "console": "integratedTerminal", // Shows output in VS Code's integrated terminal
            "justMyCode": true             // Typically debugs only your code, not library code (can be set to false)
        }
        // You can add other configurations here later if needed
        // (e.g., for specific files with arguments, attaching to processes, etc.)
    ]
}