    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Train GPT", // Updated name
            "type": "debugpy",
            "request": "launch",
            // "program": "${file}",  // Keep if you want to run whichever file is open
            "program": "${workspaceFolder}/train.py", // Explicitly run train.py
            "console": "integratedTerminal",
            "justMyCode": true
        }
        // You can add other configurations here later if needed
        // (e.g., for specific files with arguments, attaching to processes, etc.)
    ]
}